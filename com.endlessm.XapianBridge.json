{
    "app-id": "com.endlessm.XapianBridge",
    "branch": "master",
    "runtime": "com.endlessm.apps.Platform",
    "runtime-version": "master",
    "sdk": "com.endlessm.apps.Sdk",
    "finish-args": [
        "--filesystem=/var/lib/flatpak:ro",
        "--filesystem=/var/endless-extra/flatpak:ro",
        "--filesystem=host:ro",
        "--share=network"
    ],
    "build-options": {
        "no-debuginfo": true
    },
    "modules": [
        {
            "name": "xapian-bridge",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/endlessm/xapian-bridge.git"
                }
            ]
        }
    ]
}
